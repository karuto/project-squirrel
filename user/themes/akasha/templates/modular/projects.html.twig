<div class="home__projects">
  <div class="home__tagline">
    <section class="container">
      <h2 class="bigtext bigtext--tagline">{{ page.header.tagline }}</h2>
      <ul class="shortlist shortlist--tagline">
        {% for t in 1..4 %}
        <li class="shortlist__item">Lifestyle</li>
        {% endfor %}
      </ul>
    </section>
  </div>

  <section class="collage collage--home">

    <div class="collage__row">
      <figure class="collage__img collage__img--hero">
        <img class="collage__img__img" src="{{ page.media['project-hero.jpg'].url }}">
      </figure>
    </div><!-- .collage__row -->

    <div class="home__projects__content__row">

      <div class="flexgrid">
        <div class="flexcell">
          <figure class="collage__img collage__img--vertical">
            <img src="{{ page.media['project-vertical.jpg'].url }}">
          </figure>
        </div><!-- .flexcell -->
        <div class="flexcell">
          <div class="flexgrid flexgrid--nested">
            <div class="flexcell">
              <figure class="collage__img collage__img--horizontal">
                <img src="{{ page.media['project-horizontal.jpg'].url }}">
              </figure>
            </div>
            <div class="flexcell">
              <figure class="collage__img collage__img--bottom">
                <img src="{{ page.media['project-bottom.jpg'].url }}">
              </figure>
            </div>
          </div><!-- .flexgrid .nested -->
        </div><!-- .flexcell -->
      </div><!-- .flexgrid -->

    </div><!-- .home__projects__content__row -->

  </section>
</div>
