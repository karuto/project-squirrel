<div class="home__projects">
  <div class="home__tagline">
    <section class="container">
      <h2 class="bigtext bigtext--tagline">{{ page.header.tagline }}</h2>
      <ul class="shortlist shortlist--tagline">
        {% for t in 1..4 %}
        <li class="shortlist__item">Lifestyle</li>
        {% endfor %}
      </ul>
    </section>
  </div>

  <section class="container clearfix collage collage--home">

    <div class="collage__row clearfix">
      <figure class="collage__figure collage__figure--hero" style="background-image: url('{{ page.media['project-hero.jpg'].url }}')">
      </figure>
    </div><!-- .collage__row -->

    <div class="collage__row clearfix">

      <div class="collage__half">
        <figure class="collage__figure collage__figure--tall" style="background-image: url('{{ page.media['project-vertical.jpg'].url }}')">
        </figure>
      </div>
      <div class="collage__half">
        <figure class="collage__figure collage__figure--short" style="background-image: url('{{ page.media['project-horizontal.jpg'].url }}')">
        </figure>
        <figure class="collage__figure collage__figure--short" style="background-image: url('{{ page.media['project-bottom.jpg'].url }}')">
        </figure>
      </div>

    </div><!-- .collage__row -->

  </section>
</div>
